name: Angular Front-End Tests

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  test-frontend:
    runs-on: ubuntu-latest

    steps:
      # Étape 1 : Cloner le repository
      - name: Checkout repository
        uses: actions/checkout@v4

      # Étape 2 : Configuration Node.js
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20' 

      # Étape 3 : Installation des dépendances
      - name: Install dependencies
        run: npm install
        working-directory: front  
        
      # Étape 4 : Exécution des tests Angular avec Karma et ChromeHeadless
      - name: Run Angular tests with Karma
        run: npm run test -- --watch=false --code-coverage
        working-directory: front  

      # Étape 5 : Sauvegarde des rapports de couverture comme artifact
      - name: Upload coverage report
        uses: actions/upload-artifact@v4
        with:
          name: coverage-report
          path: front/coverage/bobapp
      
      # Étape 6 : Vérification de la génération du fichier lcov.info
      - name: List coverage directory
        run: ls -R front/coverage
